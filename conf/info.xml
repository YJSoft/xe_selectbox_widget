<?xml version="1.0" encoding="UTF-8"?>
<widget version="0.2">
    <title xml:lang="ko">Selectbox Sitemap 위젯</title>
    <description xml:lang="ko">Selectbox로 사이트맵을 출력해 줍니다.</description>
    <version>0.1.0</version>
    <date>2014-08-14</date>

    <author email_address="yjsoft@yjsoft.pe.kr" link="http://yjsoft.pe.kr/">
        <name xml:lang="ko">YJSoft</name>
    </author>
    <extra_vars>
        <group>
	        <title xml:lang="ko">기본설정</title>
	        <var id="sitemap_widget_menu">
	            <type>menu</type>
	            <name xml:lang="ko">메뉴</name>
	            <description xml:lang="ko">
	            	선택하신 메뉴를 사용하여 사이트맵을 생성합니다.<br/>
	            	선택하지 않으면 사이트맵을 생성하지 않습니다.
				</description>
	        </var>
			<var id="sitemap_widget_colorset" type="select">
	            <name xml:lang="ko">타입</name>
	            <description xml:lang="ko">이동 방식을 설정해 주세요</description>
	            <options>
	                <value>black</value>
	                <name xml:lang="ko">이동 버튼</name>
	            </options>
	            <options>
	                <value>blue</value>
	                <name xml:lang="ko">즉시 이동</name>
	            </options>
	        </var>
		</group>
		<group>
	        <title xml:lang="ko">추가설정</title>
	        <var id="selectbox_default">
	            <type>text</type>
	            <name xml:lang="ko">기본 문자열</name>
	            <description xml:lang="ko">아무것도 선택하지 않았을시 출력되는 기본 선택 문자열을 결정합니다</description>
        	</var>
        	</group>
    </extra_vars>
</widget>